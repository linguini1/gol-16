f0: ; mar <- [pc], t1 <- [pc]
    pcoe, regr, marce, t1ce, anop, #f1

f1: ; mdr <- Mmem[[mar]], t2 <- pc++
    maroe, ibread, mdrce, aadd, coe, t2ce, #f2

f2: ; ir <- [mdr]
    irce, mdroe, mdrget, anop, #decode

; SPECIAL DECODE STATE -------------------------------------------------------------------------------------------------
decode: ; pc <- [t2]
    pcoe, regw, t2oe, #e0

